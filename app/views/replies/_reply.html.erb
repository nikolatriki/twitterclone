<div class="container">
    <div class="colum-is-6 is-offset-3">
      <article class="media">
        <div class="media-content comment">
          <% @tweet.replies.each do |reply| %>
            <div class="content is-size-7">
              <p>
                <strong><%= reply.replier %></strong>
                <small><%= time_ago_in_words(reply.created_at) %> ago</small>
                <br>
                <%= reply.body %>
              </p>
            </div>
            <div class="level-left">
              <%= link_to edit_tweet_reply_path(reply.tweet, reply), class:"level-item" do %>
                <span class="icon is-small"><i class="fas fa-edit"></i></span>
              <% end %>
              <%= link_to tweet_reply_path(reply.tweet, reply),
              method: :delete,
              data: { confirm: 'Are you shure you want to delete this reply?'} do %>
              <span class="icon is-small"><i class="fas fa-trash"></i></span>
              <% end %>
            </div>
          <% end %>
        </div>
      </article>
    </div>
</div>

<div class="container">
  <div class="columns is-multiline">
    <div class="column is-6 is-offset-3">
      <div class="content is-size-6">
        <% if tweet.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(tweet.errors.count, "error") %> prohibited this tweet from being saved:
          </h2>
          <ul>
            <% tweet.errors.full_messages.each do |message|%>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <%= form_with model: tweet, local: true do |form|%>
              <div class="field">
                <%= form.label heading, class: "label" %>
                <div class="control">
                  <%= form.text_area :body, class: "textarea", placeholder: "Maximum 140 characters..." %>
                </div>
              </div>

        <div class="field is-grouped">
          <div class="control">
              <%= form.submit class: "button is-light" %>
          </div>
        </div>
        <% end %>

          <div class="control">
              <%= link_to 'Cancel', cancel_path, class: "button is-white" %>
          </div>
      </div>
    </div>
  </div>
</div>

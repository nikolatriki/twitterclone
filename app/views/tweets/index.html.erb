<div class="container">
  <%= link_to 'New tweet', new_tweet_path %>

  <ul><% @tweets.each do |tweet| %>
    <li>
      <%= link_to tweet.body, tweet_path(tweet)  %>
      <%= link_to 'Edit', edit_tweet_path(tweet), class:"fas fa-edit"%>
      <%= link_to 'Delete', tweet_path(tweet),
      method: :delete,
      data: { confirm: 'Are you shure you want to delete this tweet?'},
      class:"fas fa-trash"%>
    </li>
    <% end %>
  </ul>
</div>

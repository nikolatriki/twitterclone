<div class="container">
  <div class="columns is-multiline">
    <div class="column is-6 is-offset-3">
      <div class="content is-size-6">
        <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
          </h2>
          <ul>
            <% @user.errors.full_messages.each do |message|%>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

          <%= form_with model: @user, local: true do |form|%>
              <div class="field">
                <%= form.label :name %>
                <div class="control">
                  <%= form.text_field :name, class: "input", placeholder: "Your name here"  %>
                </div>
              </div>
              <div class="field">
                <%= form.label :email %>
                <div class="control">
                  <%= form.email_field :email, class: "input", placeholder: "Your email" %>
                </div>
              </div>
                <div class="field">
                <%= form.label :password %>
                <div class="control">
                  <%= form.password_field :password, class: "input", placeholder: "Enter password" %>
                </div>
              </div>
               <div class="field">
                <%= form.label :password_confirmation %>
                <div class="control">
                  <%= form.password_field :password_confirmation, class: "input", placeholder: "Confirm password" %>
                </div>
              </div>

            <div class="field is-grouped">
              <div class="control">
                  <%= form.submit class: "button is-light" %>
              </div>
            </div>

            <div class="control">
                <%= link_to 'Cancel', tweets_path, class: "button is-white" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>

